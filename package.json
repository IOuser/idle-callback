{
    "name": "idle-callback",
    "version": "1.0.0",
    "description": "Strongly-typed requestIdleCallback polyfill",
    "author": "Igor Emets <ya.peren@yandex.ru>",
    "license": "MIT",
    "keywords": [
        "polyfill",
        "requestIdleCallback",
        "idle",
        "performance",
        "optimisation",
        "strongly",
        "typed"
    ],
    "main": "./lib/index.js",
    "typings": "./lib/index.d.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "npm run build:ts",
        "build:ts": "tsc",
        "tslint": "tslint -p tsconfig.json -c tslint.json",
        "prettier": "prettier --write **/*.ts",
        "clean": "rm -rf lib",
        "prepack": "npm run clean && npm run build",
        "precommit": "lint-staged",
        "patch": "yarn version --new-version patch && npm publish",
        "minor": "yarn version --new-version minor && npm publish"
    },
    "devDependencies": {
        "@types/node": "10.3.3",
        "prettier": "1.13.5",
        "tslint": "5.9.1",
        "tslint-config-prettier": "1.9.0",
        "tslint-eslint-rules": "5.1.0",
        "tslint-microsoft-contrib": "5.0.3",
        "tslint-plugin-prettier": "1.3.0",
        "typescript": "2.9.1",
        "vrsource-tslint-rules": "5.8.1"
    },
    "lint-staged": {
        "*.{ts}": [
            "npm run prettier",
            "git add"
        ]
    }
}
